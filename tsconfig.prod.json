{
   "compilerOptions":{
      "module": "commonjs",
      "outDir": "./ts",
      "target": "ES6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "sourceMap": true,
      "baseUrl":  "./src",
      "paths": {
        "*": [ "./*" ]
      }
   },
   "include":[
      "./src/*.ts",
      "./src/*.d.ts"
   ]
}
